@model Ahorcado

<main>
    <div>
        <h2>Ahorcado</h2>
    </div>
    <div>
        <label>@Model.Palabra</label>
    </div>
    <div>
        @for (int i = 0; i < Model.Alphabet.Count; i++)
        {
            if (i == 10)
            {
                <br />
            }
            if (i == 19)
            {
                <br />
            }
            <button id="@Model.Alphabet[i]" onclick="ProbarLetra(@Model.Alphabet[i])">@Model.Alphabet[i]</button>
        }
    </div>
</main>
